#include <stdio.h>
#define MAX 100

int queue[MAX], front = -1, rear = -1;
int visited[MAX];

void enqueue(int v) {
    if (rear == MAX - 1) return;
    if (front == -1) front = 0;
    queue[++rear] = v;
}

int dequeue() {
    if (front == -1 || front > rear) return -1;
    return queue[front++];
}

void BFS(int adj[MAX][MAX], int n, int start) {
    for (int i = 0; i < n; i++) visited[i] = 0;
    enqueue(start);
    visited[start] = 1;

    printf("BFS Traversal (Safe Routes): ");
    while (front <= rear) {
        int v = dequeue();
        printf("%d ", v);
        for (int i = 0; i < n; i++) {
            if (adj[v][i] == 1 && !visited[i]) {
                enqueue(i);
                visited[i] = 1;
            }
        }
    }
}

void DFS(int adj[MAX][MAX], int n, int start) {
    visited[start] = 1;
    printf("%d ", start);
    for (int i = 0; i < n; i++) {
        if (adj[start][i] == 1 && !visited[i])
            DFS(adj, n, i);
    }
}

int main() {
    int n, adj[MAX][MAX], start;

    printf("Enter number of locations: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix (0 for no route, 1 for route):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &adj[i][j]);

    printf("Enter starting location: ");
    scanf("%d", &start);

    printf("\nUsing BFS:\n");
    BFS(adj, n, start);

    for (int i = 0; i < n; i++) visited[i] = 0;
    printf("\nUsing DFS:\n");
    DFS(adj, n, start);

    return 0;
}
